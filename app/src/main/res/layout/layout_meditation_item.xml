<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/parola_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Parola Title"
        android:textColor="@color/colorWhite"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/meditation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:maxHeight="35sp"
        android:text="Meditation Text"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/parola_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Date"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/write_experience_image_view"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/meditation_text_view"
        android:layout_marginEnd="35dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/share_meditation_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/meditation_text_view"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <ImageView
        android:id="@+id/view_meditation_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/meditation_text_view"
        android:layout_marginEnd="75dp"
        app:srcCompat="@android:drawable/ic_menu_view" />

</RelativeLayout>